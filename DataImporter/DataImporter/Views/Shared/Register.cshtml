@model DataImporter.Models.AccountModel.RegisterModel
@{
    ViewData["Title"] = "Register";
}


<head>

    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" rel="stylesheet" type="text/css">
    <link href="http://netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <style type="text/css">
    </style>
</head>
<br />
<br />
<br />
<br />
<br />
<br />
<br />
<br />
<body style="overflow-x:hidden">
    <br>
    <div class="row">
        <div class="container">
            <div class="login-register-form-section">
                <ul class="nav nav-tabs" role="tablist">
                    <li><a asp-controller="Account" asp-action="Login">Login</a></li>
                    <li class="active"><a asp-controller="Account" asp-action="Register">Register</a></li>
                </ul>
                <div class="tab-content">

                    <div role="tabpanel" class="tab-pane fade in active" id="register">
                        <form class="form-horizontal" method="post" asp-controller="Account" asp-action="Register">
                            <div class="form-group ">
                                <div class="input-group">

                                    <label asp-for="Name"></label>
                                    <input asp-for="Name" class="form-control" placeholder="Name" required="required" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group ">
                                <div class="input-group">

                                    <label asp-for="Email"></label>
                                    <input asp-for="Email" class="form-control" placeholder="Email" required="required" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group ">
                                <div class="input-group">
                                    <label asp-for="Password"></label>
                                    <input asp-for="Password" class="form-control" placeholder="Password" required="required" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group ">
                                <div class="input-group">
                                    <label asp-for="ConfirmPassword"></label>
                                    <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password" required="required" />
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                            </div>

                            <span style="color:azure; margin-left:5px">@ViewBag.Message</span>
                            <input type="hidden" id="foo" name="foo" />
                            <input type="submit" value="Register" class="btn btn-success btn-custom">

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
    <script>
        function onSubmit(token) {
            document.getElementById("email-form").submit();
        }
    </script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script type="text/javascript" src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
        <script src="https://www.google.com/recaptcha/api.js?render=6LfA81ocAAAAAInGiexBq-KLtZGpw6mzugcu-bWi"></script>
        <script>
            grecaptcha.ready(function () {
                grecaptcha.execute('6LfA81ocAAAAAInGiexBq-KLtZGpw6mzugcu-bWi', { action: 'Register' }).then(function (token) {
                    document.getElementById("foo").value = token;
                });
            });
        </script>
    }

</body>