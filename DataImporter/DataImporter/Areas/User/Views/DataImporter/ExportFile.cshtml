
@{
    ViewData["Title"] = "ExportFile";
}

    <script src="./js/dropzone.js"></script>
<script src="./js/dropzone.min.js"></script>


<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid" style="align-self: center">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Export A File</h1>
            </div>

        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- general form elements -->
                <div class="card card-primary">
                    <div class="card-header" style="color: white; background-color: #343a40">
                        <h3 class="card-title">Export  File</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form>
                        <div class="card-body">
                            <div class="col-sm-6">
                                <!-- select -->
                                <div class="form-group">
                                    <label>Select a group</label>
                                    <select class="custom-select">
                                        <option>Group 1</option>
                                        <option>Group 2</option>
                                        <option>Group 3</option>
                                        <option>Group 4</option>
                                        <option>Group 5</option>
                                    </select>
                                </div>
                            </div>
                            <div class="card-body">
                                <table id="Contact" class="table table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th>File Name</th>
                                            <th>Imports Date</th>
                                            <th>Group Name</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>


                                </table>

                                <partial name="_deletePartial" />
                            </div>
                            <!-- /.card-body -->

                    </form>
                </div>
                <!-- /.card -->
            </div>
            <div class="card-footer">
                <button type="submit" class="btn btn-primary" style="color: white;background-color: #343a40;border-color:black">Download</button>
                <a asp-action="Index" asp-controller="DataImporter"
                   class="btn btn-default float-right" style="color: white;background-color: #343a40">Send to Email</a>
            </div>
        </div>
    </div>
</section>

