@model EmailSenderModel
@{
    ViewData["Title"] = "EmailSender";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Email</h1>
            </div>

        </div>
    </div><!-- /.container-fluid -->
</section>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- general form elements -->
                <div class="card card-primary">
                    <div class="card-header" style="color: white;background-color: #343a40">
                        <h3 class="card-title">Give an Email Address</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form method="post" asp-controller="DataImporter" asp-action="EmailSender" asp-antiforgery="true">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="card-body">
                            <div class="form-group row">

                                <label asp-for="Email">Group Name</label>
                                <input type="email" class="form-control" id="Email" asp-for="Email" required 
                                       placeholder="Email">

                            </div>
                            <div class="text-danger">
                                @ViewBag.DuplicationMessage
                            </div>

                            <input type="hidden" asp-for="GroupId" />
                        </div>
                        <!-- /.card-body -->
                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary" style="color: white;background-color: #343a40;border-color:black">Send</button>
                            <a asp-action="Index" asp-controller="DataImporter"
                               class="btn btn-default float-right" style="color: white;background-color: #343a40">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>