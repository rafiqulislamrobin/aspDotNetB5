@model CreateCutomerModel
@{
    ViewData["Title"] = "Create";
}

<  <section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Add A Customer</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Add Customer</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- general form elements -->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Add Customer</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form method="post" asp-controller="Shop" asp-action="Create" asp-antiforgery="true">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="card-body">
                            <div class="form-group row">
                                <label asp-for="Name">Customer Name</label>
                                <input type="text" class="form-control" id="Name" asp-for="Name"
                                       placeholder="Customer Name">

                            </div>
                            <div class="form-group">
                                <label asp-for="Age">Age</label>
                                <input type="number" class="form-control" id="Age" placeholder="Age" asp-for="Age">
                            </div>
                            <div class="form-group">
                                <label asp-for="Address">Address</label>
                                <input type="text" class="form-control" id="Address" placeholder="Address"
                                       asp-for="Address">
                            </div>

                        </div>
                        <!-- /.card-body -->

                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">Create</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
